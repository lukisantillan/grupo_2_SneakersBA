<%- include('../partials/metadata') %>
<link rel="stylesheet" href="/css/styles-login-register.css">
<link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <%- include('../partials/header') %>
      <main>

                      
          <div class="contenido">
              <form method="post" action="/registro" id="form-padre" enctype="multipart/form-data" >
                  <div class="form-hijo">
                      <h1>Registro</h1>
                      <div class="grupo">
                          <input type="text" name="first_name" class="name" minlength="3" value="<%= typeof old != 'undefined' ? old.first_name : '' %>" required><span class="barra"></span>
                          <label for=""> Nombre: </label>
                      </div>

                      <div class="grupo">
                          <input type="text" name="last_name" class="name" value="<%= typeof old != 'undefined' ? old.last_name : '' %>" required><span class="barra"></span>
                          <label for=""> Apellido: </label>
                      </div>

                      <div class="grupo">
                          <input type="email" name="email" class="name" value="<%= typeof old != 'undefined' ? old.email : '' %>" required><span class="barra" ></span>
                          <label for=""> Email: </label>
                      </div>
                      <div class="grupo">
                        <input type="password" name="password" class="name" required minlength="8"><span
                            class="barra"></span>
                        <label for=""> Contraseña: </label>
                    </div>
                      <div class="grupo">
                          <input type="password" name="confirm_password" class="name" required minlength="8"><span
                              class="barra"></span>
                          <label for=""> Confirmar contraseña: </label>
                      </div>

                      <div class="custom-file">
                          <input type="file" class="form-control"   name="avatar"  placeholder="Debes eligir tu avatar...">
                      </div> 

                      <!-- Aquí muestro los errores --->
                      <% if(typeof(errors) != 'undefined'){%>
                        <ul class="alert alert-danger">
                           <% errors.forEach(error => { %>
                              <li><%= error.msg%></li>
                           <%});%>
                         </ul>
                     <%}%>    
                     <!----Fin mostrar errores--------->

                      <button type="submit"> ENVIAR </button>
                      <p class="warnings" id="warnings"></p>

                  </div>
              </form>
          </div>
      </main>s
      <%- include('../partials/footer') %>
      <script src="/js/registro.js"></script>
</body>

</html>