<%- include('../partials/metadata') %>
<link rel="stylesheet" href="/css/styles-cart.css">
<link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <%- include('../partials/header') %>
      <main>
          <div class="cartMain">
              <div class="grupo1">
                  <div class="cartTop">
                      <h1 class="cartTitle">TU CARRITO</h1>
                      <p>Total 2 productos</p>
                      <p class="productPrice">$ 47.780</p>
                  </div>
                  <div class="cartList">
                      <div class="cartItem">
                          <img class="itemImage" src="/images/Adidas-Forum-84-Hi-White-Gold-Foil.jpg" alt="">
                          <div class="itemDetail">
                              <h4 class="productName">Adidas Forum 84</h4>
                              <p class="productDesc">CLOUD WHITE / CORE BLACK / SOLAR RED.</p>
                              <p class="productSize">Tamaño: 43 [UK 10]</p>
                              <div class="productPriceQtyCaret">
                                  <div class="productPrice">$ 28.790 </div>
                                  <div class="productQty">

                                      <label> Cantidad </label>
                                      <select class="selectQty" name="cantidad" id=""><i>class="fa-regular
                                              fa-square-caret-down"></i>
                                          <option value="1">1</option>
                                          <option value="2">2</option>
                                          <option value="3">3</option>
                                          <option value="4">4</option>
                                          <option value="5">5</option>
                                      </select>

                                  </div>

                              </div>
                          </div>
                          <div class="itemActions">
                              <i class="fa-solid fa-xmark"></i>
                              <i class="fa-regular fa-heart"></i>
                          </div>
                      </div>
                      <div class="cartItem">
                          <img class="itemImage" src="/images/adidas-Forum-Buckle-Low-Bad-Bunny-Blue-Tint.jpg"
                              alt="">
                          <div class="itemDetail">
                              <h4 class="productName">Adidas Forum Bucle</h4>
                              <p class="productDesc">CLOUD WHITE / CORE BLACK / SOLAR RED.</p>
                              <p class="productSize">Tamaño: 43 [UK 10]</p>
                              <div class="productPriceQtyCaret">
                                  <div class="productPrice">$ 18.990 </div>
                                  <div class="productQty">
                                      <label> Cantidad </label>
                                      <select class="selectQty" name="cantidad" id=""><i>class="fa-regular
                                              fa-square-caret-down"></i>
                                          <option value="1">1</option>
                                          <option value="2">2</option>
                                          <option value="3">3</option>
                                          <option value="4">4</option>
                                          <option value="5">5</option>
                                      </select>
                                  </div>

                              </div>
                          </div>
                          <div class="itemActions">
                              <i class="fa-solid fa-xmark"></i>
                              <i class="fa-regular fa-heart"></i>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="grupo2">
                  <!-- Código PROMOCIONAL -->
                  <form class="codPromocional" action="#" method="get">
                      <input class="codPromocional" type="Código promocional" id="codigoProm" name="codigoProm"
                          placeholder="Ingresa tu código de promoción" size="40">
                  </form>
                  <div class="orderSummary">
                      <h3>RESUMEN DEL PEDIDO</h3>
                      <div class="orderDetail">
                          <div class="orderCount orderLine">
                              <p>2 PRODUCTOS</p>
                              <p>$ 47.780</p>
                          </div>
                          <div class="orderDelivery orderLine">
                              <p>Entrega</p>
                              <p>GRATIS</p>
                          </div>
                          <div class="orderAmount orderLine">
                              <h4>TOTAL</h4>
                              <h4>$47.780</h4>
                          </div>
                      </div>
                  </div>
                  <div class="botonPago">
                      <button class="botonPagar" type="submit" id="pagar">PAGAR</button>
                  </div>
                  <div class="paymentOptions">
                      <div>
                          <h3 class="opcionesPago">OPCIONES DE PAGO</h3>
                      </div>
                      <div class="cardLogos">
                          <img class="logo" src="/images/visa.png" alt="">
                          <img class="logo" src="/images/master.png" alt="">
                          <img class="logo" src="/images/american.png" alt="">
                      </div>
                  </div>
              </div>
          </div>
      </main>
      <%- include('../partials/footer') %>
</body>

</html>