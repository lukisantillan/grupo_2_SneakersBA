    <%- include('partials/metadata') %>
      <link rel="stylesheet" href="/css/styles-login-register.css">
      <link rel="stylesheet" href="/css/styles.css">
    </head>

    <body>
        <%- include('partials/header') %>
            <main>
                <% if (typeof errors != 'undefined') { %> 

                    <p style="color: red"> ERROR </p>

                    <ul>
                        <% for (let i = 0; i < errors.lenght; i++) { %> 
                            <li>
                                <%= errors[i].msg %> 
                            </li>
                            <% } %> 
                    </ul>
                    <% } %> 
                <div class="contenido">
                    <form method="post" action="" id="form-padre">
                        <div class="form-hijo">
                            <h1>Registro</h1>
                            <div class="grupo">
                                <input type="text" name="firstName" id="name" minlength="3" required><span class="barra"></span>
                                <label for=""> Nombre: </label>
                            </div>

                            <div class="grupo">
                                <input type="text" name="lastName" id="name" required><span class="barra"></span>
                                <label for=""> Apellido: </label>
                            </div>

                            <div class="grupo">
                                <input type="email" name="email" id="name" required><span class="barra"></span>
                                <label for=""> Email: </label>
                            </div>

                            <div class="grupo">
                                <input type="text" name="userName" id="name" required minlength="5"><span class="barra"></span>
                                <label for=""> Nombre de usuari@: </label>
                            </div>

                            <div class="grupo">
                                <input type="password" name="password" id="name" required minlength="8"><span
                                    class="barra"></span>
                                <label for=""> Contraseña: </label>
                            </div>

                            <div class="grupo">
                                <input type="password" name="" id="name" required minlength="8"><span
                                    class="barra"></span>
                                <label for=""> Confirmar contraseña: </label>
                            </div>

                            <button type="submit"> ENVIAR </button>

                        </div>
                    </form>
                </div>
            </main>
            <%- include('partials/footer') %>
    </body>

    </html>