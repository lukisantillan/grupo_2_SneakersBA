<%- include('partials/metadata') %>
    <link rel="stylesheet" href="/css/styles-login-register.css">
    <link rel="stylesheet" href="/css/styles.css">
    </head>

    <body>
        <%- include('partials/header') %>
            <main>
                <% if (typeof errors !='undefined' ) { %>

                    <p style="color: red"><ul>
                        <% for (let i=0; i < errors.lenght; i++) { %>
                            <li>
                                <%= errors[i].msg %>
                            </li>
                            <% } %>
                    </ul>
                    <% } %></p>


                        <div class="contenido">
                            <form method="POST" action="/user/login" id="form-padre">
                                <div class="form-hijo">

                                    <h1> INICIA SESIÓN </h1>

                                    <div class="grupo">
                                        <input type="text" name="userName" id="name" required minlength="5"><span
                                            class="barra"></span>
                                        <label for=""> Nombre de usuari@: </label>
                                    </div>

                                    <div class="grupo">
                                        <input type="password" name="password" id="name" required minlength="8"><span
                                            class="barra"></span>
                                        <label for=""> Contraseña: </label>
                                    </div>
                                    
                                    <label class="grupo">
                                        Recordarme
                                        <input name="remember" type="checkbox">
                                    </label>    

                                <div>
                                    <button type="submit" class="boton-formulario"> INGRESAR </button>
                                </div>

                                <div>


                                    <div class="flex-media-query">
                                        <div>
                                            <a href="/user/register" class="link-register">Regístrate</a>
                                        </div>

                                        <div class="recuperar-contraseña">
                                            <a href="#">¿Olvidaste tu contraseña?</a>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>
            </main>
            <%- include('partials/footer') %>
    </body>

    </html>