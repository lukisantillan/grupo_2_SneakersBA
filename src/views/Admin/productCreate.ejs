<%- include('../partials/metadata') %>
     <link rel="stylesheet" href="/css/styles-createProduct.css">
     <link rel="stylesheet" href="/css/styles.css">
     </head>

     <body>
          <%- include('../partials/header') %>
               <main class="main-container">

                    <section>
                         <div class="contenido">
                              
                              <form class="form-padre" method="POST" action="/administrar/create"
                                   enctype="multipart/form-data">
                                   <div class="form-hijo"></div>

                                   <!-- ----TÍTULO----  -->
                                   <div>
                                        <h1 class="titulo">CARGAR PRODUCTO </h1>
                                   </div>


                                   <div class="">
                                        <!-- ----NOMBRE ----  -->
                                        <div class="grupo">
                                             <label for="name">Nombre del producto</label></br></br>
                                             <input type="text" class="form-control" name="nombre" placeholder="Nombre del producto" required="required" value="">
                                        </div>
                                        <div class="">
                                             <!-- ----DESCRIPCIÓN----  -->
                                             <div class="form-descipcion">
                                                  <label for="">Descripción</label></br></br>
                                                  <input type="text" class="form-control" name="descripcion" placeholder="Descripción" required="required" value="">
                                             </div>
     
                                        </div>

                                        <!-- ----PRECIO----  -->
                                        <div class="grupo">
                                             <label for="price">Precio</label></br></br>
                                             <input type="number" class="form-control" name="precio" placeholder="Ingresa el precio" required="required" value="">
                                        </div>

                                           <!-- ----foto----  -->
                                           <div class="grupo" class="create-input-photo">
                                             <label>Foto del producto</label>
                                             <br>
                                             <input type="file" name="imagen">
                                        </div>

                                        <!-- ----CATEGORÍA----  -->
                                        <div class="grupo">
                                             <label for="category">Categoría:</label></br></br>
                                             <select name="categoria" id="categoria" class="custom-select">
                                                  <option value="#" selected disabled>Seleccione su categoría...</option>
                                                  <% categorias.forEach(categoria => { %>
                                                    <option value="<%=categoria.id %>"><%=categoria.name %></option>
                                                  <% }); %>
                                                </select>
                                        </div>

                                     

                                   </div>
                                 
                                   <!-- ----BOTÓN "GUARDAR"----  -->
                                   <button type="submit" class="boton-guardar">Guardar</button>
                              </form>
                         </div>
                    </section>
               </main>
               <%- include('../partials/footer') %>
     </body>

     </html>