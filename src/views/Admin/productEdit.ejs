<%- include('../partials/metadata') %>
     <link rel="stylesheet" href="/css/styles-createProduct.css">
     <link rel="stylesheet" href="/css/styles.css">
     </head>

     <body>
          <%- include('../partials/header') %>
               <main class="main-container">
                    <section>
                         <div class="contenido">

                              <form class="form-padre" action="/administrar/edit/<%=shoeEditar.id %>?_method=PUT"
                                   method="POST" enctype="multipart/form-data" > 
                                   <div class="form-hijo">
                                        <!-- ----TÍTULO----  -->
                                        <div>
                                             <h1 class="titulo">Editar producto </h1>
                                        </div>

                                        <div class="grupo">
                                             <!-- ----NOMBRE ----  -->
                                             <div>
                                                  <label for="name">Nombre del producto</label>
                                                  <input type="text" name="nombre" required="required"
                                                       value="<%= shoeEditar.name %>" class="nombre-producto-create"
                                                       placeholder="EJ: Nike Jordan">

                                             </div>

                                             <!-- ----PRECIO----  -->
                                             <div>
                                                  <label for="price">Precio</label>
                                                  <input type="number" name="precio" required="required"
                                                       value="<%= shoeEditar.price %>" class="precio-product-create">
                                             </div>

                                             <!-- ----CATEGORÍA----  -->
                                             <div>
                                                  <label for="category">Categoría:</label>
                                                  <select class="textarea-input" id="categoria" name="categoria">
                                                       <option value="<%=shoeEditar.category.id %>" selected hidden><%=shoeEditar.category.name %>
                                                       </option>
                                                       <% categorias.forEach(categoria => { %>
                                                            <option value="<%=categoria.id %>"><%=categoria.name %></option>
                                                          <% }); %>
                                                  </select>
                                             </div>
                                             <div>
                                                  <!-- ----DESCRIPCION----  -->
                                                         <div class="form-descipcion">
                                                              <label for="description">Descripción</label>
                                                              <textarea name="descripcion" required="required"
                                                                   class="textarea-input"> <%= shoeEditar.description %>
                                                              </textarea>
                                                         </div>
                                                    </div>  
                                                    <!-- --- IMAGEN----  -->    
                                                     <div>
       
                                                         <input type="hidden"  name="oldImagen"  value="<%= shoeEditar.image%>">
                                                          <input type="file" name="imagen" >
                                                         <label class="custom-file-label" for="inputGroupFile01">Seleccione una imagen...</label>-->
                                                      </div>
                                                    </div>


                                        </div>

                                        
                                        <!-- ----BOTÓN "GUARDAR"----  -->
                                        <button type="submit" class="boton-guardar">EDITAR</button>
                                   </div>
                              </form>
						
                         </div>
                      
                    </section>
               </main>
               <%- include('../partials/footer') %>
     </body>

     </html>